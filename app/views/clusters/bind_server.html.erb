<div class="modal" tabindex="-1" role="dialog", id="bind_server_modal", style="display: block;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">绑定服务</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag(bind_server_cluster_path(@cluster.id), method: :put) do %>
        <div class="modal-body">
          <%= select_tag :server_id, options_from_collection_for_select(@servers, "id", "name") %>
        </div>
        <div class="modal-footer">
          <%= submit_tag 'Save', class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
